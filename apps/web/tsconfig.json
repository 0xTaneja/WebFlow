{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@repo/api": ["../../packages/api/src/index.ts"],
      "@repo/api/*": ["../../packages/api/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["app/types", "./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "app/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
